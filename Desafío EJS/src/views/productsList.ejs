<%- include('./partials/main.ejs') %>

<body>
    <div class="container mt-3">
            <div class="jumbotron">
                <h1>Lista de Productos</h1>
                <br>

                <% if(products){ %>
                    <div class="table-responsive">
                        <table class="table table-dark">
                            <tr>
                                <th>Nombre</th>
                                <th>Precio</th>
                                <th>Foto</th>
                            </tr>
                            <%products.forEach(function(product) {%>
                                <tr>
                                    <td>
                                        <%=product.title%>
                                    </td>
                                    <td>
                                        <%=product.price%>
                                    </td>
                                    <td><img width="50" src=<%=product.thumbnail%> alt="not found"></td>
                                </tr>
                                <%});%>
                        </table>
                    </div>
                    <% } else{ %>
                        <h3 class="alert alert-warning">No products found</h3>
                        <% } %>

                            <br>
                            <a href="/" type="button" class="btn btn-primary">Go to Form</a>

            </div>
    </div>


</body>

</html>